<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <!-- CSS de Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT"
      crossorigin="anonymous"
    />

    <!-- CSS de FontAwesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
    />

    <!-- CSS de Animate -->

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />

    <!-- CSS Propio -->
    <link rel="stylesheet" href="./css/navbar.css" />
    <link rel="stylesheet" href="./css/sidebar.css" />
    <link rel="stylesheet" href="./css/styles.css" />
    <!-- CSS de fonts -->

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container d-flex flex-wrap homeContainer">
      <%- include('./partials/navbar') %>

      <div class="followContainer">
        <div>
          <div class="user">
            <i class="fa-solid fa-arrow-left-long"></i>
            <span class="d-flex flex-column">
              <small class="userName"><%= user.firstname %> <%= user.lastname %></small>
              <small>@<%= user.username %></small>
            </span>
          </div>
          <div class="divFollow">
            <button>Followers</button>
            <button>Following</button>
          </div>
        </div>

        <div>
          <% for (follower of followers) { %>
          <div class="d-flex align-items-center justify-content-between mb-3">
            <div class="d-flex">
              <img
                src="<%= follower.avatar %>"
                class="avatarImg"
                alt=""
              />

              <span class="d-flex flex-column spanAvatar">
                <small class="smallUser fs-6"
                  ><%= follower.firstname %> <%= follower.lastname %></small
                >
                <small>@<%= follower.username %> </small>
              </span>
            </div>
            <button class="btnFollow">Follow</button>
          </div>
          <% } %>
        </div>
      </div>

      <%- include('./partials/sidebar') %>
    </div>

    <!-- JS de Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <!-- JS Propio -->
    <script src="/app.js"></script>
  </body>
</html>
